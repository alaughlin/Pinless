<form class="signin-form" action="<%= session_url %>" method="post">
  <h2>Sign In</h2>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="signin-username">Username</label>
  <br>
  <input id="signin-username" class="signin-text" type="text" name="user[username]" value="<%= @user.username %>">
  <br>

  <label for="signin-password">Password</label>
  <br>
  <input id="signin-password" class="signin-text" type="password" name="user[password]" value="<%= @user.password %>">
  <br>

  <button class="signin-button">Sign In</button>
  <br>

  <div class="line-and-or">
    <hr>
    <p class="or">OR</p>
  </div>

  <a href="/auth/facebook" class="fb-signin"><%= image_tag "fb_signin.png" %></a>
</form>