<h2>Boards</h2>
<ul class="group">
  <% @boards.each do |board| %>
    <a href="<%= board_url(board) %>">
      <li class="board content-list-item">
        <ul class="board-details content-list-item-details">
          <li><%= board.title %></li>
          <li><img src="<%= board.avatar.url %>" width="150"></li>
        </ul>
      </li>
    </a>
  <% end %>

  <a href="<%= new_user_board_url(current_user) %>">Add A Board!</a>
</ul>

<h2>Cards</h2>
<ul class="group">
  <% @cards.each do |card| %>
    <a href="<%= card_url(card) %>">
      <li class="card content-list-item">
        <ul class="card-details content-list-item-details">
          <li><%= card.title %></li>
          <li><img src="<%= card.image.url %>" width="150"></li>
        </ul>
      </li>
    </a>
  <% end %>
</ul>