<ul>
  <li class="modal-image-li">
    <img src="<%= card.escape('image_large') %>" class="card-modal-image" data-id="<%= card.escape('id') %>">
    <% if (card.escape('likes_card') === 'true') { %>
      <button class="card-like-button" data-id="<%= card.escape('id') %>">Unlike Card</button>
    <% } else { %>
      <button class="card-like-button" data-id="<%= card.escape('id') %>">Like Card</button>
    <% } %>
  </li>
  <ul class="card-modal-details">
    <li class="card-title"><%= card.escape('title') %> <br> <p class='card-description'><%= card.escape('description') %></p></li>
    <li><a href="#/boards/<%= card.escape('board_id') %>" class="card-board"><img src="<%= card.escape('board_avatar') %>" class="avatar-thumb"><p class="avatar-title"><%= card.escape('board_title') %></p></a></li>
    <li><a href="#/users/<%= card.escape('user_id') %>" class="card-user"><img src="<%= card.escape('user_avatar') %>" class="avatar-thumb"><p class="avatar-title"><%= card.escape('user_username') %></p></a></li>
    <% if (card.escape('likes_card') === 'true') { %>
      <img src="<%= Pinless.heart %>" class="heart">
    <% } %>
  </ul>
  <a href="#" class='close-modal-link'><img src="<%= Pinless.close %>" class="close-card-modal-image"></a>
</ul>