<li class="card content-list-item">
  <ul class="card-details content-list-item-details">
    <li><img src="<%= card.escape('image') %>" width="150" class="card-image"></li>
    <li class="card-title"><%= card.escape('title') %></li>
    <li><a href="#/boards/<%= card.escape('board_id') %>" class="card-board"> Posted on: <%= card.escape('board_title') %></a></li>
    <li><a href="#/users/<%= card.escape('user_id') %>" class="card-user"> Owned by: <%= card.escape('user_username') %></a></li>
  </ul>
</li>